<configuration scan="true">
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>../logs/session.log</file>
        <encoder>
            <!--pattern>%date %level %msg%n</pattern-->
            <!--pattern>%date{ISO8601} %-5level %logger{36} %X{sourceThread} - %msg%n</pattern-->
            <pattern>%date{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/session.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory> 
        </rollingPolicy>
    </appender>
    <appender name="SOCKETIO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>../logs/session-socketio.log</file>
        <encoder>
            <pattern>%date{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/session-socketio.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    <logger name="spray.can.server" level="INFO" additivity="false">
        <appender-ref ref="SOCKETIO" />
    </logger>
    <logger name="spray.contrib.socketio" level="INFO" additivity="false">
        <appender-ref ref="SOCKETIO" />
    </logger>
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
